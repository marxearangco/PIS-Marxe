<div class="modal-header btn-default">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <span style="font-size: 16px"><b>Set Appointment</b></span>
</div>
<div class="modal-body">
<%= simple_form_for (@appointment), wrapper: :pis_form, wrapper_mappings: { pis: :pis_form, file: :vertical_file_input, mi: :pis_form_small } do |f| %>
	<div class="row">
		<div class="col-xs-8">
			<label>Patient Name</label>
			<!--%= f.select :patient_id, options_from_collection_for_select(Patient.all, :id, :fullname,@patient.id), {:prompt => @patient_name}, {:class => 'form-control'} %-->
			<%= f.select :patient_id, options_for_select([[@patient_name, @patient.id]]),{}, {class: 'form-control', style: 'font-size: 14px'} %>
		</div>
		<div class="col-xs-4">
			<label>Appointment Date</label>
			<%= f.text_field :appointment_date, required: true, class: 'form-control' %>
		</div>
	</div>
	<br/>
	<div class="row">
		<div class="col-xs-12">
			<label>Purpose</label>
			<%= f.text_area :purpose, required: true, class: 'form-control' %>
		</div>
	</div>
	<br />
	<div class="modal-footer">
		<div class="btn-group form-actions">
		<!--%= link_to 'Back', @patient, class: 'btn btn-default' %-->
			<%= f.button :submit, value:'Save', class: 'btn btn-default' %>
		</div>
	</div>
</div>
<% end %>
<script type="text/javascript">
$(function () {
	// var appoint_date = '2015-09-03';
	$('#appointment_appointment_date').datetimepicker({
		format: 'YYYY-MM-DD'
		// defaultDate: appoint_date
	});
	// $('#appointment_appointment_date').datetimepicker('update', new Date());
});
</script>